<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ListEmployees"
        android:orientation="vertical">

    <EditText
            android:id="@+id/emp_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ID"/>

    <EditText
            android:id="@+id/emp_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"/>

    <EditText
            android:id="@+id/emp_rg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="RG"/>

    <EditText
            android:id="@+id/dp_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Department ID"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:orientation="horizontal">

        <Button
                android:id="@+id/btn_emp_add"
                android:text="Add"
                android:layout_width="130dp"
                android:layout_height="wrap_content"/>
        <Button
                android:id="@+id/btn_emp_update"
                android:text="Update"
                android:layout_width="130dp"
                android:layout_height="wrap_content"/>
        <Button
                android:id="@+id/btn_emp_delete"
                android:text="Delete"
                android:layout_width="130dp"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/list_employees"/>

</LinearLayout>